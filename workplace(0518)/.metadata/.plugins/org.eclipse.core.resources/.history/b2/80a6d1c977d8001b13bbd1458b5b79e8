<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- <bean class="web.controller.SimpleUrlController" id="simpleUrlController"></bean>
 -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" id="urlMapping">
		<property name="mappings">
			<props>
				<prop key="/member/*.do">memberController</prop> <!--  모든 do 가 들어오면 userController 로 들어가라 -->
			</props>
		</property>
	</bean>
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" 
	id="viewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
		<property name="prefix" value="/WEB-INF/views/"></property> <!-- jsp를 통한 dos 공격하지 마세요 -->
		<property name="suffix" value=".jsp"></property>
	</bean>
	
<!-- 	<bean class="web.controller.UserController" id="userController">
		<property name="methodNameResolver">
			<ref local="userMethodNameResolver"/>
		</property>
	</bean> -->
	
	<bean class="web.controller.MemberController" id="memberController">
		<property name="methodNameResolver">
			<ref local="MethodResolver"/>
		</property>
		<property name="memberService" ref="memberService"></property>
	</bean>
	
	<bean class= "org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver" 
	id="MethodResolver">
		<property name="mappings">
			<props>
				<prop key="/test/listMembers.do">listMembers</prop>
				<prop key="/test/addMember.do">addMember</prop>
				<prop key="/test/memberForm.do">memberForm</prop>
				<prop key="/test/memberDetail.do">memberDetail</prop>
			</props>
		</property>
	</bean> <!--  url -controller 매핑 설정 -->

	

</beans>
